<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible" >

            <include layout="@layout/index_im_list" />

            <include layout="@layout/index_number_list" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/normal_bg_color" />

            <include layout="@layout/index_applications_list" />

            <include layout="@layout/index_application_list" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/normal_bg_color" />

            <include layout="@layout/index_education_list" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>