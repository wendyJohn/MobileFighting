<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_thin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_45"
        android:background="@color/text_blue">

        <TextView
            android:id="@+id/main_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="监控单元"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:id="@+id/im_alarm"
            android:layout_width="@dimen/widget_size_25"
            android:layout_height="@dimen/widget_size_25"
            android:layout_alignTop="@+id/main_title_txt"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/news" />
    </RelativeLayout>

    <com.sanleng.mobilefighting.myview.MyGridView
        android:id="@+id/item_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:horizontalSpacing="0dp"
        android:listSelector="#00000000"
        android:numColumns="4"
        android:verticalSpacing="0dp"></com.sanleng.mobilefighting.myview.MyGridView>

</LinearLayout>